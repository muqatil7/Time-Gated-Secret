# Copy this file to `.env` and fill in the secrets for local development.
# Never commit your filled-in `.env` file.

# Optional: port for the Express server
# PORT=3000

# Primary Firebase service-account credentials
FIREBASE_PROJECT_ID=secret-time-7f086
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@secret-time-7f086.iam.gserviceaccount.com
